<h1>Edit track</h1>


<form action="<%= track_url(@track) %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Track Name
  <input type="text" name="track[track_name]" value="<%= @track.track_name %>">
  </label>

  <br>

  <label>Album
  <select name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value="<%= album.id %>"
        <%= "selected" if @track.album_id == album.id %>>
        <%= album.title %>
      </option>
    <% end %>
  </select>
  </label>
  <br>

  <label>Track length
    <input type="number"
           name="track[track_length]"
           value="<%= @track.track_length %>">
  </label>
  <br>


  <label>Bonus
    <input type="radio"
           name="track[track_type]"
           value="Bonus"
           <%= "checked" if @track.track_type == "Bonus" %>>
  </label>

  <br>

  <label>Standard
    <input type="radio"
           name="track[track_type]"
           value="Standard"
           <%= "checked" if @track.track_type == "Standard" %>>
  </label>
  <br>
  <label>Lyrics
    <textarea name="track[lyrics]"><%= @track.lyrics %></textarea>
  </label>
  <br>
  <br>

  <input type="submit">

</form>
