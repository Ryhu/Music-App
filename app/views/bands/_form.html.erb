<% action_url = @band.persisted? ? band_url(@band) : bands_url %>
<% form_method = @band.persisted? ? "PATCH" : "POST" %>

<% if !@band.errors.full_messages.empty? %>
  <% @band.errors.full_messages.each do |msg| %>
  <ul>
    <li>
      <%= msg %>
    </li>
  </ul>
  <% end %>

<% end %>

<form action="<%= action_url %>" method="POST">
  <input type="hidden" name="_method" value="<%= form_method %>">
  <label>Name
    <input type="text" name= "band[name]" value="<%= @band.name %>"
  </label>

  <input type="submit">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>
